<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <net.daum.mf.map.api.MapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:stretchColumns="*"
        android:layout_alignParentBottom="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/MenuBt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onMenuBt1Clicked"
                android:text="위치 표시"
                app:srcCompat="@color/common_google_signin_btn_text_dark_default" />

            <Button
                android:id="@+id/MenuBt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onMenuBt2Clicked"
                android:text="AR인식"
                app:srcCompat="@color/common_google_signin_btn_text_dark_default" />

            <Button
                android:id="@+id/MenuBt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onMenuBt3Clicked"
                android:text="설정"
                app:srcCompat="@color/common_google_signin_btn_text_dark_default" />

        </TableRow>

    </TableLayout>


</RelativeLayout>